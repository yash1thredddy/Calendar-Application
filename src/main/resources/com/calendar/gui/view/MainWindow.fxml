<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.calendar.gui.controller.MainWindowController"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- Top: Toolbar -->
    <top>
        <ToolBar>
            <Label text="Calendar Application" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+ Create Event" onAction="#handleCreateEvent" styleClass="create-button"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="eventCountLabel" text="Total Events: 0" style="-fx-padding: 0 10 0 10;"/>
        </ToolBar>
    </top>

    <!-- Center: TabPane with 3 tabs -->
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <!-- Tabs will be populated programmatically in controller -->
        </TabPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Label fx:id="statusLabel" text="Ready" style="-fx-padding: 0 10 0 10;"/>
        </HBox>
    </bottom>

</BorderPane>
